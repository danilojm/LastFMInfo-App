<?import javafx.scene.layout.StackPane?>

<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="com.danilomendes.Controller.MainController">
  <center>
    <BorderPane prefHeight="845.0" prefWidth="983.0" BorderPane.alignment="CENTER">
      <top>
        <StackPane>
          <Pane prefHeight="186.0" prefWidth="983.0" BorderPane.alignment="CENTER">
            <children>
              <Label layoutX="37.0" layoutY="14.0" text="Type of Search" />

              <Button fx:id="searchButton" layoutX="37.0" layoutY="122.0" mnemonicParsing="false"
                text="Search" />

              <ImageView fx:id="artistImageViewId" fitHeight="150.0" fitWidth="200.0"
                layoutX="769.0" layoutY="11.0" pickOnBounds="true" preserveRatio="true" />

              <TextArea fx:id="sumaryTextAreaField" editable="false" layoutX="250.0" layoutY="10.0"
                prefHeight="151.0" prefWidth="511.0" wrapText="true" />

              <ComboBox fx:id="typeOfSearchCombobox" editable="true" layoutX="37.0" layoutY="37.0"
                prefHeight="25.0" prefWidth="179.0" />

              <Label fx:id="typeOfSearchLabel" layoutX="37.0" layoutY="68.0" text="Artist" />

              <TextField fx:id="searchTextField" layoutX="37.0" layoutY="89.0" prefHeight="25.0"
                prefWidth="179.0" />

            </children>
          </Pane>
          <Button text="Close" onAction="#closeApplication" StackPane.alignment="TOP_RIGHT" />
        </StackPane>
      </top>
      <center>
        <StackPane alignment="CENTER">
          <GridPane fx:id="gridPane" prefHeight="646.0" prefWidth="983.0"
            BorderPane.alignment="CENTER">

            <columnConstraints>
              <ColumnConstraints />
            </columnConstraints>

            <rowConstraints>
              <RowConstraints />
            </rowConstraints>

            <cursor>
              <Cursor fx:constant="DEFAULT" />
            </cursor>

          </GridPane>
        </StackPane>
      </center>
    </BorderPane>
  </center>
</BorderPane>